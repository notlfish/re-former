<h1>Edit User</h1>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username, "User name: #{@user.username}" %>
    <%= form.hidden_field :username, value: @user.username %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label(:email, 'email:') %>
    <%= form.email_field(:email, value: 'example@example.com') %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label(:password, 'Password:') %>
    <%= form.password_field(:password) %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label(:user_password_confirmation, 'Confirm password:') %>
    <%= form.password_field(:password_confirmation) %>
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit('Create user')%>
<% end %>
